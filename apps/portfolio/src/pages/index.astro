---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <div class="container">
          <h1>Ryan Stoughton</h1>
          <p class="subtitle">Full-Stack Software Engineer</p>
          <p class="description">
            I build scalable web applications and data systems that solve complex business problems. 
            With experience across startups and enterprise environments, I focus on creating efficient, 
            reliable solutions that drive meaningful impact.
          </p>
        </div>
      </section>

      <section class="content">
        <div class="container">
          <!-- Main content will go here -->
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  main {
    min-height: calc(100vh - 200px); /* Adjust based on header/footer height */
  }

  .hero {
    padding: 4rem 0;
    text-align: left;
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .hero .subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .hero .description {
    font-size: 1.2rem;
    color: var(--text-muted);
    line-height: 1.6;
    max-width: 540px;
    margin: 0;
  }

  .content {
    padding: 2rem 0;
  }

  /* Tablet styles */
  @media (min-width: 768px) {
    .container {
      padding: 0 2rem;
    }

    .hero {
      padding: 6rem 0;
    }


    .hero .subtitle {
      font-size: 1.75rem;
    }

    .hero .description {
      font-size: 1.3rem;
    }

    .content {
      padding: 4rem 0;
    }
  }

  /* Desktop styles */
  @media (min-width: 1024px) {
    .container {
      padding: 0 3rem;
    }

    .hero {
      padding: 8rem 0;
    }


    .hero .subtitle {
      font-size: 2rem;
    }

    .hero .description {
      font-size: 1.4rem;
    }

    .content {
      padding: 6rem 0;
    }
  }
</style>
