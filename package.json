{
  "name": "monorepo",
  "author": "Ryan Stoughton",
  "devDependencies": {
    "syncpack": "^14.0.0"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@swc/core",
      "browser-tabs-lock",
      "esbuild"
    ]
  },
  "private": true,
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "fix:versions": "syncpack fix && syncpack format",
    "lint": "pnpm -r --if-present run lint",
    "lint:fix": "pnpm -r --if-present run lint:fix",
    "lint:versions": "syncpack lint"
  }
}
